<div class="search">
  <nav class="navbar search-nav">
    <div class="container-fluid">
      <div class="nav navbar-left">
        <a class="brand-link" href="/">
          ‚ù§ kittenbnb
        </a>
      </div>

      <div class="nav navbar-left search-bar">
        <i class="fa fa-search" aria-hidden="true"></i>
        <input type="text">
      </div>

      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">Help</a></li>
        <li><a href="#">Sign Up</a></li>
        <li><a href="#">Log In</a></li>
      </ul>
    </div>
  </nav>


  <div class="search-sidebar">
    <div class="search-forms">
    <div class="form-row">
      <label>Dates</label>

      <form>
        <div class="inline-form-control">
          <input type="text">
        </div><div class="inline-form-control">
          <input type="text">
        </div><div class="inline-form-control">
          <select>
            Num Guests
          </select>
        </div>
      </form>
    </div>

    <div class="form-break">
      <div class="break"></div>
    </div>

    <div class="form-row">
      <label>Room Type</label>

      <form>
        <div class="inline-form-control">
          <div class="mycheckbox">
            <%= image_tag("home_airglyphs.svg", class: :icon) %>
            Entire home/apt

            <input type="checkbox">
          </div>
        </div><div class="inline-form-control">
          <div class="mycheckbox">
            <%= image_tag("private-room_airglyphs.svg", class: :icon) %>
            Private room

            <input type="checkbox">
          </div>
        </div><div class="inline-form-control">
          <div class="mycheckbox">
            <%= image_tag("shared-room_airglyphs.svg", class: :icon) %>
            Shared room

            <input type="checkbox">
          </div>
        </div>
      </form>
    </div>

    <div class="form-break">
      <div class="break"></div>
    </div>

    <div class="form-row">
      <label>Price Range</label>

      <form class="slider-form">
        <div id="price-range"></div>

        <div class="min-price">$100</div>
        <div class="max-price">$999</div>
      </form>
    </div>
    </div>

    <div class="listings">
      <%= render "listing" %>
    </div>
  </div>

  <div class="map-sidebar">
    <div id="map"></div>
  </div>
</div>

<script>
  function initMap () {
    map = new google.maps.Map(document.getElementById("map"), {
      center: {
        lat: <%= @lat_lng[0] %>,
        lng: <%= @lat_lng[1] %>
  },
  disableDefaultUI: true,
  zoomControl: true,
      zoom: 12
    });
  }
</script>

<script>
  var slider = document.getElementById('price-range');

  noUiSlider.create(slider, {
    start: [20, 80],
    connect: true,
    range: {
      'min': 0,
      'max': 100
    }
  });
</script>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.secrets.places_api_key %>&libraries=places&callback=initMap" defer async></script>
