      I am the rest of the results!
    </div>
  </div>

  <div class="map-sidebar">
    <div id="map"></div>
  </div>
</div>

<script>
  function initMap () {
    map = new google.maps.Map(document.getElementById("map"), {
      center: {
        lat: <%= @lat_lng[0] %>,
        lng: <%= @lat_lng[1] %>
  },
  disableDefaultUI: true,
  zoomControl: true,
      zoom: 12
    });
  }
</script>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.secrets.places_api_key %>&libraries=places&callback=initMap" defer async></script>
